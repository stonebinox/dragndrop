{% extends "layout.html" %}
{% block content %}
<body ng-app="dragndrop">
<div class="container" ng-controller="brands">
<div style="background:url(images/dragcheck.png) no-repeat center;-webkit-background-size:contain;-moz-background-size:contain;background-size:contain;width:100%;height:80px;"></div>
<hr>
  <div class="row">
    <div class="col-sm-9">
      <h1>Brand Management</h1>
    </div>
    <div class="col-sm-3">
      <div class="btn-group" style="margin-top:20px;">
        <button type="button" class="btn btn-primary" ng-click="addBrand()">Add Brand</button>
        <button type="button" class="btn btn-default" ng-click="logout()">Log out</button>
      </div>
    </div>
  </div>
  <div class="panel panel-default" ng-init="getBrands()">
    <div class="panel-heading"><strong>Brands</strong></div>
    <div class="panel-body" id="brandholder"></div>
  </div>
</div>
<div class="container">
  <div id="myModal" class="modal fade" role="dialog"></div>
</div>
</body>
{% endblock %}
