{% extends "layout.html" %}
{% block content %}
<body ng-app="dragndrop">
<div class="container" ng-controller="campaigns">
<div style="background:url(images/dragcheck.png) no-repeat center;-webkit-background-size:contain;-moz-background-size:contain;background-size:contain;width:100%;height:80px;"></div>
<hr>
  <div class="row">
    <div class="col-sm-9" ng-init="getBrand()">
      <h1>Campaign Management for <span id="brandname"></span></h1>
    </div>
    <div class="col-sm-3">
      <button type="button" class="btn btn-default" onclick="window.location='dashboard';" style="margin-top:20px;">&lt;&nbsp;Back to brands</button>
    </div>
  </div>
  <hr>
  <div class="panel panel-default" ng-init="getCampaigns()">
    <div class="panel-heading"><strong>Campaigns</strong>&nbsp;&nbsp;<button type="button" class="btn btn-primary btn-sm" ng-click="addCampaign()">Add Campaign</button></div>
    <div class="panel-body" id="campaignholder"></div>
  </div>
</div>
<div class="container">
  <div id="myModal" class="modal fade" role="dialog"></div>
</div>
</body>
{% endblock %}
